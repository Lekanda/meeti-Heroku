<main class="contenedor contenedor-formularios">
    <h1><%= nombrePagina %></h1>
    <form action="/crear-cuenta" method="POST" class="default-form">
        <div class="campo">
            <label>eMail</label>
            <input type="email" name="email" placeholder="Pon tu eMail">
        </div>
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" placeholder="Pon tu Nombre">
        </div>
        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Pon tu Password">
        </div>
        <div class="campo">
            <label>Repite tu Password</label>
            <input type="password" name="confirmar" placeholder="Repite el Password">
        </div>
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Crear Cuenta">
        </div>
    </form>
</main>